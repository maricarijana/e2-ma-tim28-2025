<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/white">

        <!-- User Name -->
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Član: user123"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="8dp" />

        <!-- Damage Dealt -->
        <TextView
            android:id="@+id/tv_damage_dealt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💥 Ukupno HP: 42"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="8dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar_member"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="130"
            android:progress="42"
            android:progressTint="@android:color/holo_green_dark"
            android:layout_marginBottom="12dp" />

        <!-- Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/background_light"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_shop_purchases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🛒 Kupovina: 2/5"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_boss_hits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚔️ Boss hitovi: 5/10"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_task_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📝 Lakši zadaci: 3/10"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_tasks_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔥 Teži zadaci: 1/6"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_days_with_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💬 Dani sa porukama: 7/14"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_no_unfinished_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Bez nerešenih zadataka"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
